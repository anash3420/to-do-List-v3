<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box" id="hide">
    <% newListItems.forEach(function(item){ %>

      <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=item._id%> " onchange="this.form.submit()">
        <p><%=  item.name  %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %> "></input>
      </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" class="add" name="list" value="<%= listTitle %> ">+</button>
      </form>
  </div>
 
    <div class="box">
      <button type="button" class="submit" id="hideen" onclick="unhide_block()">Custom List</button>

      <form class="item hidden" action="/" method="POST">
        <input type="text" name="newListName" placeholder="New List Name" autocomplete="off">
        <button type="submit" class="add" name="list" value="customList">+</button>
      </form>
    </div>
